// vars

back-color = #001221
grey-color = #a5a5a5
red-color = #de1a1a
green-color = #008000

small-border = 3px solid 
big-border = 8px solid 
box-shadow = 0 0 7px 3px
transition = all .3s ease

// mixins

Button(color)
    background-color color 
    border-color color
    color #ffffff

    &:hover 
        background-color #ffffff
        color color 
        box-shadow box-shadow color